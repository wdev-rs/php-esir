{
    "name": "wdev-rs/php-esir",
    "description": "Php implementation of electronic invoice service (ESIR)",
    "keywords": [
        "wdevrs",
        "phpesir"
    ],
    "homepage": "https://github.com/wdev-rs/php-esir",
    "license": "MIT License",
    "type": "library",
    "authors": [
        {
            "name": "Daniel Verner",
            "email": "daniel@wdev.rs",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "WdevRs\\PhpEsir\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WdevRs\\PhpEsir\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
